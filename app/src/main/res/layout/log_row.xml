<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/fiveDip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/simpleLogView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/fiveDip"
                android:paddingBottom="@dimen/fiveDip"
                android:paddingLeft="@dimen/tenDip"
                android:visibility="gone"/>

            <HorizontalScrollView
                android:id="@+id/jsonLogContainer"
                android:layout_marginTop="@dimen/fiveDip"
                android:paddingLeft="@dimen/tenDip"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/dateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/twoDip"
                android:layout_marginBottom="@dimen/twoDip"
                android:text="Medium Text"
                android:gravity="right"
                android:textColor="@color/lightGray"
                android:textSize="@dimen/tenDip" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>